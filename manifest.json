{
  "manifest_version": 2,
  "name": "Audio Capture Extension",
  "description": "Capture audio from the browser for 3 seconds",
  "version": "1.0",
  "permissions": [
    "tabCapture",
    "activeTab"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Record Audio"
  },
  "background": {
    "scripts": ["dist/bundle.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "capabilities": {
    "audioCapture": {}
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://unpkg.com/@ffmpeg/core@0.12.6/dist/umd/ffmpeg-core.js;"
}
