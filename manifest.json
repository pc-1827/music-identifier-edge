{
  "manifest_version": 2,
  "name": "Nirvana - Music Identifer",
  "description": "Identifies music playing in your current tab",
  "version": "1.0",
  "permissions": [
    "tabCapture",
    "activeTab",
    "storage",
    "unlimitedStorage"
  ],
  "browser_action": {
    "default_icon": "public/logo_processed.jpeg",
    "default_popup": "popup.html",
    "default_title": "Identify the Music"
  },
  "background": {
    "scripts": ["dist/bundle.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "capabilities": {
    "audioCapture": {}
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://unpkg.com/@ffmpeg/core@0.12.6/dist/umd/ffmpeg-core.js;"
}
